<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="asl.abdelouahed.HomeActivity">

    <asl.abdelouahed.CameraView
        android:id="@+id/camera_view_touch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_toRightOf="@id/layout_iv_test_touch"
        app:camera_id="back" />

    <LinearLayout
        android:id="@+id/layout_iv_test_touch"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_test_rgb_touch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_test_gray_touch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_switch_cam_touch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_layout"
        android:padding="10dp"
        android:src="@drawable/ic_camera_front" />

    <TextView
        android:id="@+id/tv_finger_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:textColor="#fff"
        android:textSize="30sp" />

</RelativeLayout>
